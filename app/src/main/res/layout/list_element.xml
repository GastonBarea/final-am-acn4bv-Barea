<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@color/green">
                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    app:srcCompat="@mipmap/ic_tijera_peine_foreground">

                </ImageView>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iconImageView"
                    tools:ignore="ExtraText">

                    <TextView
                        android:id="@+id/nombreTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="PeluquerÃ­a"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/horariosTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horarios: L a V de 8 a 20Hs."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/serviciosTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios: Corte, Tintura, Alisado"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/direccionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calle 1234, Localidad"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/telefonoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultar al: 1133335555"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:autoLink="phone"/>
                    <TextView
                        android:id="@+id/correoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="usuario@peluqueria.com"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:autoLink="email"/>



                </LinearLayout>

                <ImageView
                    android:id="@+id/statusTextView"
                    android:layout_width="47dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="book"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:srcCompat="@mipmap/ic_book">
                </ImageView>

            </RelativeLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>